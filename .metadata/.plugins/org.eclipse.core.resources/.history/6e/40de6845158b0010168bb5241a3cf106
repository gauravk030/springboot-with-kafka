package com.test.consumer;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.test.dto.UserEvent;

@Service
public class MultiTopicConsumer {

    @KafkaListener(topics = "user-events", groupId = "group-1",
                   containerFactory = "kafkaListenerContainerFactory")
    public void consumeUser(UserEvent user) {
        System.out.println("ðŸ“© Received user event: " + user);
    }

    @KafkaListener(topics = "order-events", groupId = "group-1",
                   containerFactory = "kafkaListenerContainerFactory")
    public void consumeOrder(OrderEvent order) {
        System.out.println("ðŸ“¦ Received order event: " + order);
    }
}
