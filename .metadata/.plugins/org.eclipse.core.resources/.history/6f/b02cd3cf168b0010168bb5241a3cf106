package com.test.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.kafka.core.ProducerFactory;

import com.test.dto.OrderEvent;
import com.test.dto.UserEvent;

@Configuration
public class ProducerConfig {

    @Bean
    public KafkaTemplate<String, UserEvent> userKafkaTemplate(ProducerFactory<String, UserEvent> pf) {
        return new KafkaTemplate<>(pf);
    }

    @Bean
    public KafkaTemplate<String, OrderEvent> orderKafkaTemplate(ProducerFactory<String, OrderEvent> pf) {
        return new KafkaTemplate<>(pf);
    }
}

