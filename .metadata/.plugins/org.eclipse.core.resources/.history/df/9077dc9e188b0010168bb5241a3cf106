package com.test.controller;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.test.consumer.MessageConsumer;
import com.test.dto.UserEvent;

@RestController
@RequestMapping("/consumed")
public class MessageController {

    private final MessageConsumer consumer;

    public MessageController(MessageConsumer consumer) {
        this.consumer = consumer;
    }

    @GetMapping
    public List<UserEvent> getConsumedMessages() {
        return consumer.getReceivedUsers();
    }
}
