package com.test.consumer;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.test.dto.UserEvent;

@Service
public class SameTopicMultiConsumer {

    @KafkaListener(topics = "user-events", groupId = "group-2",
                   containerFactory = "kafkaListenerContainerFactory")
    public void consumerOne(UserEvent user) {
        System.out.println("ðŸ‘¤ ConsumerOne processed: " + user);
    }

    @KafkaListener(topics = "user-events", groupId = "group-3",
                   containerFactory = "kafkaListenerContainerFactory")
    public void consumerTwo(UserEvent user) {
        System.out.println("ðŸ‘¤ ConsumerTwo processed: " + user);
    }
}

